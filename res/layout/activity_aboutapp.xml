<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6"
     >
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/addpicture"
        android:textSize="30sp"
        android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout style="@style/wrap_layout" >
        <!-- 上圆角-->
        <LinearLayout 
            android:id="@+id/LinearLayout_appupdate"
            style="@style/top_layout">
            <TextView 
                style="@style/usertext" 
                android:text="@string/appupdate" />
          	<ImageView 
          	    android:contentDescription="@style/img_arrow" 
          	    style="@style/img_arrow"/>
        </LinearLayout>
        
        <!-- 分割线 -->
             <View style="@style/bg_line"/>
          <!-- 下圆角-->
       <LinearLayout 
           android:id="@+id/LinearLayout_back"
           style="@style/bottom_layout">
            <TextView 
                style="@style/usertext" 
                android:text="@string/back" />
          	<ImageView 
          	    android:contentDescription="@style/img_arrow"
          	    style="@style/img_arrow"/>
        </LinearLayout>
        <ProgressBar 
            android:id="@+id/progressBar_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:visibility="gone"/>     
    </LinearLayout> 
</LinearLayout>