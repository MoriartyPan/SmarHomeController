<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#F0F3F6"
    >
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/adddevices"
            android:textSize="40sp"
            />
    </LinearLayout>
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp">
            <TextView 
                android:id="@+id/tvAddDevices"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/devicesname"
                android:textSize="20sp"
                android:layout_alignBaseline="@+id/txtAddDevices"
                android:layout_alignBottom="@+id/txtAddDevices"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                />
            <EditText 
                android:id="@+id/txtAddDevices"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvAddDevices"
                android:inputType="text"
                />
            <TextView 
                android:id="@+id/tvAddLocation"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/deviceslocation"
                android:textSize="20sp"
                android:layout_alignBaseline="@+id/txtAddLocation"
                android:layout_alignBottom="@+id/txtAddLocation"
                android:layout_toStartOf="@+id/txtAddDevices"
                />
            <EditText 
                android:id="@+id/txtAddLocation"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvAddLocation"
                android:layout_below="@id/txtAddDevices"
                android:inputType="number"
                />
            <TextView 
                android:id="@+id/tvExplain"
                android:layout_marginStart="16dp"
                android:layout_below="@id/tvAddLocation"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/RoomList"/>
            <ListView 
            android:id="@+id/showRoom1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawVerticalTrack="true" 
            android:layout_below="@id/tvExplain"
            android:layout_marginStart="16dp"/>
<!--		<TextView 
                android:id="@+id/tvAddStatus"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/devicesstatus"
                android:textSize="20sp"
                android:layout_alignBaseline="@+id/switch2"
                android:layout_alignBottom="@+id/switch2"
                android:layout_alignStart="@+id/tvAddLocation"
                />
            <Switch 
                android:id="@+id/switch2"
                android:layout_width="210dp"
		    	android:layout_height="wrap_content"
		    	android:layout_toEndOf="@id/tvAddStatus"
		    	android:layout_below="@id/txtAddLocation"/>
-->
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3">
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                >
                <Button 
                    android:id="@+id/btnAddDevices"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/add"
                    />
                <Button 
                    android:id="@+id/btnAddCancel"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/btnAddDevices"
                    android:text="@string/cancel"/>
            </RelativeLayout>
        </LinearLayout>

    
</LinearLayout>